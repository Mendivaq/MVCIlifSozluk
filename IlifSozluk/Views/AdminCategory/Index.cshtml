@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>BAŞLIKLAR</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryID</th>
    <td>@item.CategoryName</td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-gradient-danger">SİL</a></td>
    <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-gradient-warning">GÜNCELLE</a></td>
    <td><a href="" class="btn btn-gradient-info">BAŞLIKLAR</a></td>
</tr>
    }
    
</table>
<br />
<a style="width:100%"class="btn btn-inverse-dark"   href="/AdminCategory/AddCategory">Yeni Kategori</a>
